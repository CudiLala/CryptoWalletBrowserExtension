{
  "manifest_version": 3,
  "name": "Mola Wallet",
  "short_name": "mola-wallet",
  "version": "1.0.0",
  "description": "Manage your crypto currencies with Mola Wallet",
  "icons": {
    "16": "icons/mola-logo.png",
    "32": "icons/mola-logo.png",
    "64": "icons/mola-logo.png",
    "128": "icons/mola-logo.png"
  },
  "permissions": ["activeTab", "storage", "scripting", "tabs"],
  "content_scripts": [
    {
      "matches": ["https://*.molanft.io/*", "http://*.molanft.io/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["https://*.molanft.io/*", "http://*.molanft.io/*"],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icons/mola-logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["window.js"],
      "matches": ["https://*.molanft.io/*", "http://*.molanft.io/*"]
    }
  ]
}
